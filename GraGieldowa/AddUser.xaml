<Page
    x:Class="GraGieldowa.AddUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraGieldowa"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    x:Name="AddUserPage"
    NavigationCacheMode="Enabled">

    <StackPanel Background="LightBlue" BorderThickness="2" BorderBrush="LightGray" Padding="5" x:Name="UserStackPanel">
        <TextBox
            Header="Nazwa użytkownia"
            PlaceholderText="Podaj nazwę użytkownika"
            x:Name="UserName"
            />

        <TextBox
            Header="Saldo Początkowe"
            PlaceholderText="Podaj saldo początkowe [zł]"
            x:Name="CurrentBalance"
            />

        <TextBlock x:Name="ErrorText" FontSize="18" Foreground="Red"/>

        <Button Background="White" x:Name="AddUserButton" Content="Dodaj nowego użytkownika" Click="AddUserDetails_Click" Margin="0 10 0 0"/>

    </StackPanel>
</Page>
